<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_succes_dialog"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="48dp">

    <TextView
        android:id="@+id/create_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_create_new"
        android:gravity="center"
        android:layout_marginEnd="32dp"
        android:text="Új tétel \nlétrehozása"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_toStartOf="@id/add_to_existing_button"/>

    <TextView
        android:layout_marginStart="32dp"
        android:id="@+id/add_to_existing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_add_to_existing"
        android:gravity="center"
        android:text="Hozzáadás \nmeglévőhöz"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>