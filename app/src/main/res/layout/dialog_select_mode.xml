<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog"
    android:gravity="center"
    android:padding="24dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/create_new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_create_new"
        android:gravity="center"
        android:text="Új tétel \nlétrehozása"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_to_existing_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_add_to_existing"
        android:gravity="center"
        android:text="Hozzáadás \nmeglévőhöz"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>