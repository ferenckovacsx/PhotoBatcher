<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gallery_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gallery_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:text="IMG_DSC5487"
        app:layout_constraintBottom_toBottomOf="@+id/gallery_item_imageview"
        app:layout_constraintEnd_toEndOf="@+id/gallery_item_imageview"
        app:layout_constraintStart_toStartOf="@+id/gallery_item_imageview" />

    <CheckBox
        android:id="@+id/gallery_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/gallery_item_imageview"
        app:layout_constraintTop_toTopOf="@+id/gallery_item_imageview" />

</android.support.constraint.ConstraintLayout>